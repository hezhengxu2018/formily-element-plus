{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@sliver/formily-element-plus": ["./src"]
    },
    "resolveJsonModule": true,
    "types": ["cypress", "node"],
    "allowJs": false,
    "noUnusedLocals": false,
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "cypress/**/*"],
  "exclude": ["node_modules"]
}
